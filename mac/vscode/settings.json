{
  "[c]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    // Add a line at 80 characters.
    "editor.rulers": [
      80
    ],
    "editor.tabSize": 8,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100
  },
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "breadcrumbs.enabled": true,
  // C++ clang format settings.
  // "C_Cpp.clang_format_path": "${workspaceFolder}/third_party/depot_tools/clang-format",
  // "C_Cpp.clang_format_sortIncludes": true,
  // "C_Cpp.default.includePath": [
  //     "${workspaceFolder}",
  // ],
  "clangd.checkUpdates": true,
  "clangd.onConfigChanged": "restart",
  // Don't automatically add closing brackets. It gets in the way.
  "editor.autoClosingBrackets": "never",
  // Bracket Pair Colorizer 2 settings
  "editor.bracketPairColorization.enabled": true,
  // Do not figure out tab size from opening a file.
  "editor.detectIndentation": false,
  "editor.fontSize": 15,
  // If a formater exists, use it
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.guides.bracketPairs": "active",
  // Enable a tiny 30k feet view of your doc.
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.renderControlCharacters": false,
  // Highlight current line at the left of the editor.
  "editor.renderLineHighlight": "all",
  // Add a line at 80 characters.
  "editor.rulers": [
      80
  ],
  "editor.tabCompletion": "on",
  // Default tab size of 2, for consistency with internal codebase.
  "editor.tabSize": 2,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
      "*.gn": "gn",
      "*.gni": "gn",
      "*.grd": "xml",
      "*.idl": "cpp",
      "*.inc": "cpp",
      "*.mm": "cpp",
      "*.tcc": "cpp",
      "__bit_reference": "cpp",
      "__config": "cpp",
      "__debug": "cpp",
      "__functional_base": "cpp",
      "__node_handle": "cpp",
      "__split_buffer": "cpp",
      "__tree": "cpp",
      "algorithm": "cpp",
      "array": "cpp",
      "atomic": "cpp",
      "bitset": "cpp",
      "cctype": "cpp",
      "chrono": "cpp",
      "cinttypes": "cpp",
      "clocale": "cpp",
      "cmath": "cpp",
      "cstdarg": "cpp",
      "cstddef": "cpp",
      "cstdint": "cpp",
      "cstdio": "cpp",
      "cstdlib": "cpp",
      "cstring": "cpp",
      "ctime": "cpp",
      "cwchar": "cpp",
      "cwctype": "cpp",
      "deque": "cpp",
      "exception": "cpp",
      "forward_list": "cpp",
      "fstream": "cpp",
      "functional": "cpp",
      "initializer_list": "cpp",
      "iomanip": "cpp",
      "ios": "cpp",
      "iosfwd": "cpp",
      "iostream": "cpp",
      "istream": "cpp",
      "iterator": "cpp",
      "limits": "cpp",
      "list": "cpp",
      "map": "cpp",
      "memory": "cpp",
      "memory_resource": "cpp",
      "new": "cpp",
      "numeric": "cpp",
      "optional": "cpp",
      "ostream": "cpp",
      "random": "cpp",
      "ratio": "cpp",
      "set": "cpp",
      "sstream": "cpp",
      "stdexcept": "cpp",
      "streambuf": "cpp",
      "string": "cpp",
      "string_view": "cpp",
      "system_error": "cpp",
      "tuple": "cpp",
      "turbojpeg.h": "c",
      "type_traits": "cpp",
      "typeinfo": "cpp",
      "unordered_map": "cpp",
      "unordered_set": "cpp",
      "utility": "cpp",
      "vector": "cpp"
  },
  // Forces LF instead of "auto" which uses CRLF on Windows.
  "files.eol": "\n",
  "files.exclude": {
    // e.g. "out/[^D]*/": true,
  },
  // Insert trimmed final new line.
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  // Trim tailing whitespace on save.
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    // e.g.: "**/out*/**": true,
  },
  // Don't continuously fetch remote changes.
  "git.autofetch": false,
  // "installVSIX.force": false,
  // "jupyter.askForKernelRestart": false,
  // "jupyter.textOutputLimit": 0,
  // "python.showStartPage": false,
  // "remote.SSH.connectTimeout": 60,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.rightClickBehavior": "default",
  "window.zoomLevel": 1,
  // Do not open files in 'preview' mode. Opening a new file in can replace an
  // existing one in preview mode, which can be confusing.
  "workbench.editor.enablePreview": false,
  // Same for files opened from quick open (Ctrl+P).
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editorAssociations": {
      "*.ipynb": "jupyter-notebook"
  },
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "left",
  "zenMode.hideLineNumbers": false
}
